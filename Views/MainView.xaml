<Window x:Class="File_Analyzer.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_Analyzer.Views"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Height="600" Width="350" WindowStartupLocation="CenterScreen" 
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize" FontFamily="Cambria">
    <Border CornerRadius="20" BorderBrush="#e1eefc" BorderThickness="2">
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="\Images\FileAnalyzer.png"/>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <!-- App Title -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,10,0" Orientation="Horizontal" VerticalAlignment="Top">
                <Button Style="{StaticResource topMenuButton}">
                    <icon:PackIconMaterial Kind="WindowMinimize" Style="{StaticResource topMenuIcon}"/>
                </Button>
                <Button Style="{StaticResource topMenuButton}" Click="CloseButton_Click">
                    <icon:PackIconMaterial Kind="Close" Style="{StaticResource topMenuIcon}"/>
                </Button>
            </StackPanel>
            <!-- App Title -->
            <TextBlock Grid.ColumnSpan="2" Foreground="White" FontSize="50" Margin="0 100 40 0"
                       HorizontalAlignment="Right"><Run Text="File"/><LineBreak /><Run Text="Analyzer"/></TextBlock>

            <!-- Folder Path Textbox -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="20 10" Background="#faf9f9"
                    CornerRadius="10" Opacity="0.95">
                <TextBox Background="#faf9f9" Text="C:\" Margin="10"
                         BorderBrush="Transparent" VerticalContentAlignment="Center"
                         Foreground="Gray"/>
            </Border>

            <!-- Select Folder Button -->
            <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Select Folder"
                    Style="{StaticResource selectButton}"/>

            <!-- Size Analyze Button -->
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" Margin="20 50 20 0">
                <Button Style="{StaticResource selectOptionButton}" Content="{icon:Material SortDescending, Height=20, Width=20}"/>
                <TextBlock Text="Size Analyze" FontSize="15" Foreground="#2d3142" 
                           HorizontalAlignment="Center" Margin="0 5"/>
            </StackPanel>

            <!-- Find Duplicates Button -->
            <StackPanel Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Margin="20 50 20 0">
                <Button Style="{StaticResource selectOptionButton}" Content="{icon:Material ContentDuplicate, Height=20, Width=20}"
                        />
                <TextBlock Text="Find Duplicates" FontSize="15" Foreground="#2d3142" 
                           HorizontalAlignment="Center" Margin="0 5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
